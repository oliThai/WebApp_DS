@model WebApp_DS.Entidades.Categoria

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Edição de Categoria</h4>
            </div>
            <div class="card-body">
                <form action="/Categoria/SalvarDados" method="post">
                    <label>Id</label>
                    <input type="text" readonly name="Id" value="@Model.ID" class="form-control" /><br />

                    <label>Nome da Categoria</label>
                    <input type="text" name="Nome" value="@Model.NOME" class="form-control" /> <br />

                    <label>Ativo</label>
                    <select name="Ativo" class="form-control">
                        @if (Model.ATIVO)
                        {
                            <option value="true" selected="selected">Ativado</option>
                            <option value="false">Desativado</option>

                        }
                        else
                        {
                            <option value="true">Ativado</option>
                            <option value="false" selected="selected">Desativado</option>

                        }
                    </select>
                    <button type="submit" class="btn btn-success">
                        Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
